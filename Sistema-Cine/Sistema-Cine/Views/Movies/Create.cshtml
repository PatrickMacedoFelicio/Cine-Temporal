@model Sistema_Cine.ViewModels.FilmeViewModel 
@{
    ViewData["Title"] = "Criar Novo Filme";
}

<h1 class="display-4">Criar Novo Filme Local</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <p class="lead text-muted">Dados principais</p>
            
            <!-- Título -->
            <div class="form-group mb-3">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            
            <!-- Sinopse -->
            <div class="form-group mb-3">
                <label asp-for="Sinopse" class="control-label"></label>
                <textarea asp-for="Sinopse" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Sinopse" class="text-danger"></span>
            </div>
            
            <!-- Data + Duração + Gênero -->
            <div class="row">
                <div class="col-md-4 form-group mb-3">
                    <label asp-for="DataLancamento" class="control-label"></label>
                    <input asp-for="DataLancamento" class="form-control" type="date" />
                    <span asp-validation-for="DataLancamento" class="text-danger"></span>
                </div>

                <div class="col-md-4 form-group mb-3">
                    <label asp-for="Duracao" class="control-label"></label>
                    <input asp-for="Duracao" class="form-control" type="number" />
                    <span asp-validation-for="Duracao" class="text-danger"></span>
                </div>

                <div class="col-md-4 form-group mb-3">
                    <label asp-for="Genero" class="control-label"></label>
                    <input asp-for="Genero" class="form-control" />
                    <span asp-validation-for="Genero" class="text-danger"></span>
                </div>
            </div>

            <!-- LOCALIZAÇÃO (Open-Meteo) -->
            <h3 class="mt-4">Dados de Localização (Previsão do Tempo)</h3>
            <p class="text-muted">Esses dados permitem exibir previsão do tempo na tela de detalhes (RF06).</p>
            
            <div class="form-group mb-3">
                <label asp-for="CidadeReferencia" class="control-label"></label>
                <input asp-for="CidadeReferencia" class="form-control" />
                <span asp-validation-for="CidadeReferencia" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="Latitude" class="control-label"></label>
                    <input asp-for="Latitude" class="form-control" type="number" step="any" />
                    <span asp-validation-for="Latitude" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-group mb-3">
                    <label asp-for="Longitude" class="control-label"></label>
                    <input asp-for="Longitude" class="form-control" type="number" step="any" />
                    <span asp-validation-for="Longitude" class="text-danger"></span>
                </div>
            </div>

            <!-- BOTÕES -->
            <div class="form-group mt-4 d-grid gap-2">
                <input type="submit" value="Salvar Filme" class="btn btn-success btn-lg" />
                <a asp-action="Index" class="btn btn-outline-secondary">Cancelar e Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
