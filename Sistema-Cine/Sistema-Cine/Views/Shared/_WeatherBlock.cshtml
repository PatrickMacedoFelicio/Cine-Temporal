@model IEnumerable<Sistema_Cine.ViewModels.WeatherDayViewModel>

@* WeatherDayViewModel:
public class WeatherDayViewModel { public DateTime Date {get;set;} public double TempMin {get;set;} public double TempMax {get;set;} }
*@

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Previsão indisponível. Preencha latitude/longitude para ver a previsão.</div>
}
else
{
    <div class="weather-block card p-2">
        <h6>Previsão (diária)</h6>
        <div class="d-flex gap-2 flex-wrap">
            @foreach (var day in Model)
            {
                <div class="weather-day card p-2" style="min-width:140px;">
                    <div class="small text-muted">@day.Date.ToString("dd MMM yyyy")</div>
                    <div><strong>Mín:</strong> @Math.Round(day.TempMin) °C</div>
                    <div><strong>Máx:</strong> @Math.Round(day.TempMax) °C</div>
                </div>
            }
        </div>
    </div>
}