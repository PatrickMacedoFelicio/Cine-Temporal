@model Sistema_Cine.ViewModels.FilmeViewModel

<div class="card shadow-sm h-100">

    <img src="@Model.PosterUrl"
         class="card-img-top"
         alt="Poster de @Model.Titulo" />

    <div class="card-body">
        <h5 class="card-title">@Model.Titulo</h5>
        <p class="text-muted">@Model.DataLancamento?.ToString("yyyy")</p>
    </div>

    <div class="card-footer text-center">
        <form asp-controller="Movies" asp-action="Import" method="post">
            <input type="hidden" name="tmdbId" value="@Model.TmdbId" />
            <button type="submit" class="btn btn-success w-100">
                <i class="bi bi-cloud-download"></i> Importar
            </button>
        </form>
    </div>
</div>