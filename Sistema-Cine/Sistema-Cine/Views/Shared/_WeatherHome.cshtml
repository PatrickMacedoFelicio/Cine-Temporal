@model Sistema_Cine.ViewModels.WeatherHomeViewModel

@if (Model != null)
{
    <div class="weather-box shadow-sm mb-4">

        <div class="weather-header">
            <span class="weather-city">
                <i class="bi bi-geo-alt-fill me-1"></i>
                @Model.Cidade
            </span>

            <span class="weather-date">
                <i class="bi bi-calendar-week me-1"></i>
                @Model.Data
            </span>
        </div>

        <div class="weather-values">

            <!-- Mínima -->
            <div class="weather-value min">
                <i class="bi bi-thermometer-snow weather-icon"></i>
                <span class="label">Mínima</span>
                <span class="temp">@Model.TemperaturaMinima?.ToString("0.0")°C</span>
            </div>

            <!-- Máxima -->
            <div class="weather-value max">
                <i class="bi bi-thermometer-sun weather-icon"></i>
                <span class="label">Máxima</span>
                <span class="temp">@Model.TemperaturaMaxima?.ToString("0.0")°C</span>
            </div>

        </div>
    </div>
}